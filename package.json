{
	"name": "ilatex",
	"displayName": "i-LaTeX",
	"description": "Interactive code visualisations for LaTeX documents.",
	"version": "0.0.1",
	"publisher": "exsitu",
	"private": true,
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension/core/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ilatex.showDocumentCreationMenu",
				"title": "Display a menu to choose how to create a new iLaTeX document"
			},
			{
				"command": "ilatex.createDocumentFromActiveEditor",
				"title": "Create an iLaTeX document from the active editor",
				"enablement": "resourceLangId == latex"
			},
			{
				"command": "ilatex.createDocumentFromActiveEditorWithoutVisualisations",
				"title": "Create an iLaTeX document from the active editor (disable visualisations)",
				"enablement": "resourceLangId == latex"
			},
			{
				"command": "ilatex.recompileDocumentsUsingActiveEditor",
				"title": "Recompile the iLaTeX documents that use the file in the active editor",
				"enablement": "ilatex:hasActiveInstances == true"
			},
			{
				"command": "ilatex.destroyAllDocuments",
				"title": "Destroy all the iLaTeX documents",
				"enablement": "ilatex:hasActiveInstances == true"
			}
		],
		"snippets": [
			{
				"language": "latex",
				"path": "./snippets/ilatex.json"
			}
		],
		"configuration": {
			"title": "i-LaTeX",
			"properties": {
				"ilatex.enableLogging": {
					"type": "string",
					"enum": [
						"Enable (regular files)",
						"Enable (hidden files)",
						"Disable"
					],
					"default": "Enable (regular files)",
					"scope": "application",
					"description": "Control the automatic logging of various events in .ilatex-logs files.",
					"enumDescriptions": [
						"Log events in a regular <filename>.ilatex-logs file.",
						"Log events in a hidden .<filename>.ilatex-logs file.",
						"Do not log event (selecting this option will not create any log file)."
					]
				}
			}
		}
	},
	"extensionDependencies": [
		"torn4dom4n.latex-support"
	],
	"scripts": {
		"lint": "eslint src --ext ts",
		"build-core": "tsc --build ./",
		"build-webview": "rollup -c",
		"watch-core": "tsc --build --watch ./",
		"watch-webview": "rollup -cw",
		"package": "yarn run build-webview; yarn run build-core; vsce package -o ilatex.vsix",
		"clean": "rm -rf out"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^12.11.7",
		"@types/parsimmon": "^1.10.1",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "4.22.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"html-minifier": "^4.0.0",
		"rollup": "^2.26.5",
		"rollup-plugin-typescript2": "^0.27.2",
		"typescript": "^4.2.0"
	},
	"dependencies": {
		"parsimmon": "1.16.0"
	}
}
