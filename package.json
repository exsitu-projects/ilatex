{
	"name": "interactive-latex",
	"displayName": "InteractiveLaTeX",
	"description": "Interactive visualisations for LaTeX documents.",
	"version": "0.0.1",
	"publisher": "exsitu",
	"private": true,
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:ilatex.initWithVisualisations",
		"onCommand:ilatex.initWithoutVisualisations"
	],
	"main": "./out/extension/core/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ilatex.initWithVisualisations",
				"title": "Initialise iLaTeX from the document with focus",
				"enablement": "resourceLangId == latex"
			},
			{
				"command": "ilatex.initWithoutVisualisations",
				"title": "Initialise iLaTeX from the document with focus (WITHOUT visualisations)",
				"enablement": "resourceLangId == latex"
			},
			{
				"command": "ilatex.recompile",
				"title": "Recompile the iLaTeX documents using the document with focus",
				"enablement": "ilatex:hasActiveInstances == true"
			}
		]
	},
	"scripts": {
		"lint": "eslint src --ext ts",
		"build-core": "tsc --build ./",
		"build-webview": "rollup -c",
		"watch-core": "tsc --build --watch ./",
		"watch-webview": "rollup -cw",
		"clean": "rm -rf out"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^12.11.7",
		"@types/parsimmon": "^1.10.1",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"html-minifier": "^4.0.0",
		"rollup": "^2.26.5",
		"rollup-plugin-typescript2": "^0.27.2",
		"typescript": "^3.7.5"
	},
	"dependencies": {
		"parsimmon": "^1.13.0"
	}
}
